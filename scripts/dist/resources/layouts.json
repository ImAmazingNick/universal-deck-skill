{
  "layouts": {
    "bold-minimalist-hero": {
      "description": "Bold minimalist hero slide with title and subtitle",
      "grid": { "cols": 12, "rowHeight": 45, "margin": [15, 15] },
      "items": [
        { "i": "title", "x": 1, "y": 2, "w": 10, "h": 6, "type": "rich-text", "data": { "content": "Hero Title", "type": "header", "size": "5xl", "align": "center" } },
        { "i": "subtitle", "x": 1, "y": 8, "w": 10, "h": 3, "type": "rich-text", "data": { "content": "Hero Subtitle", "type": "subheader", "size": "xl", "align": "center", "variant": "muted" } }
      ]
    },
    "data-grid-dashboard": {
      "description": "Data grid dashboard with KPI cards",
      "grid": { "cols": 12, "rowHeight": 35, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Key Performance Indicators", "subtitle": "Q4 2024 Dashboard" } },
      "items": [
        { "i": "kpi1", "x": 0, "y": 0, "w": 3, "h": 4, "type": "kpi-card", "data": { "metric": "24%", "label": "Growth", "icon": "trending-up" } },
        { "i": "kpi2", "x": 3, "y": 0, "w": 3, "h": 4, "type": "kpi-card", "data": { "metric": "$2.5M", "label": "Revenue", "icon": "dollar-sign" } },
        { "i": "kpi3", "x": 6, "y": 0, "w": 3, "h": 4, "type": "kpi-card", "data": { "metric": "150k", "label": "Users", "icon": "users" } },
        { "i": "kpi4", "x": 9, "y": 0, "w": 3, "h": 4, "type": "kpi-card", "data": { "metric": "95%", "label": "Satisfaction", "icon": "smile" } }
      ]
    },
    "photo-narrative-flow": {
      "description": "Photo narrative flow with images and text",
      "grid": { "cols": 12, "rowHeight": 30, "margin": [10, 10] },
      "items": [
        { "i": "image1", "x": 0, "y": 0, "w": 6, "h": 6, "type": "photo-card", "data": { "src": "/placeholder.jpg", "alt": "Product Image" } },
        { "i": "text1", "x": 6, "y": 1, "w": 6, "h": 10, "type": "rich-text", "data": { "content": "Story text here", "type": "paragraph", "size": "lg", "align": "left" } }
      ]
    },
    "comparison-table": {
      "description": "Comparison table layout",
      "grid": { "cols": 12, "rowHeight": 30, "margin": [10, 10] },
      "items": [
        { "i": "table", "x": 0, "y": 0, "w": 12, "h": 8, "type": "table", "data": { "headers": ["Feature", "Us", "Them"], "rows": [["Speed", "Fast", "Slow"]] } }
      ]
    },
    "chart-showcase": {
      "description": "Chart showcase with data visualization",
      "grid": { "cols": 12, "rowHeight": 30, "margin": [10, 10] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 3, "type": "header", "data": { "title": "Data Visualization", "subtitle": "Performance Analytics" } },
      "items": [
        { "i": "chart", "x": 0, "y": 0, "w": 8, "h": 6, "type": "chart", "data": { "type": "bar", "data": [] } },
        { "i": "legend", "x": 8, "y": 3, "w": 4, "h": 6, "type": "rich-text", "data": { "content": "Chart explanation", "type": "paragraph", "size": "sm" } }
      ]
    },
    "timeline-roadmap": {
      "description": "Timeline roadmap layout",
      "grid": { "cols": 12, "rowHeight": 30, "margin": [10, 10] },
      "items": [
        { "i": "timeline", "x": 0, "y": 0, "w": 12, "h": 8, "type": "timeline", "data": { "events": [] } }
      ]
    },
    "testimonial-gallery": {
      "description": "Testimonial gallery with quotes",
      "grid": { "cols": 12, "rowHeight": 35, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Customer Testimonials", "subtitle": "What Our Clients Say" } },
      "items": [
        { "i": "testimonial1", "x": 0, "y": 0, "w": 6, "h": 5, "type": "testimonial", "data": { "quote": "Great product!", "author": "John Doe" } },
        { "i": "testimonial2", "x": 6, "y": 0, "w": 6, "h": 5, "type": "testimonial", "data": { "quote": "Love it!", "author": "Jane Smith" } }
      ]
    },
    "metrics-breakdown": {
      "description": "Metrics breakdown with detailed KPIs",
      "grid": { "cols": 12, "rowHeight": 35, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Performance Metrics", "subtitle": "Detailed KPI Analysis" } },
      "items": [
        { "i": "metric1", "x": 0, "y": 0, "w": 4, "h": 4, "type": "metric-card", "data": { "value": 85, "unit": "%", "label": "Conversion" } },
        { "i": "metric2", "x": 4, "y": 0, "w": 4, "h": 4, "type": "metric-card", "data": { "value": 120, "unit": "days", "label": "Retention" } },
        { "i": "metric3", "x": 8, "y": 0, "w": 4, "h": 4, "type": "metric-card", "data": { "value": 4.8, "unit": "/5", "label": "Rating" } }
      ]
    },
    "call-to-action": {
      "description": "Call to action slide",
      "grid": { "cols": 12, "rowHeight": 40, "margin": [15, 15] },
      "items": [
        { "i": "cta-text", "x": 0, "y": 0, "w": 12, "h": 5, "type": "rich-text", "data": { "content": "Get Started Today!", "type": "header", "size": "4xl", "align": "center" } },
        { "i": "cta-button", "x": 4, "y": 5, "w": 4, "h": 3, "type": "button", "data": { "text": "Click Here", "variant": "primary" } }
      ]
    },
    "content-slide": {
      "description": "Content slide with modern typography and text hierarchy",
      "grid": { "cols": 12, "rowHeight": 32, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Content Title", "subtitle": "Content Subtitle" } },
      "items": [
        { "i": "content", "x": 0, "y": 0, "w": 12, "h": 10, "type": "rich-text", "data": { "content": "Content goes here with modern typography and spacing.", "type": "paragraph", "size": "base", "align": "left" } }
      ]
    },
    "code-presentation": {
      "description": "Code presentation with syntax highlighting and explanations",
      "grid": { "cols": 12, "rowHeight": 35, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Code Example", "subtitle": "Implementation Details" } },
      "items": [
        { "i": "code", "x": 0, "y": 0, "w": 8, "h": 8, "type": "code", "data": { "code": "function example() {\n  return 'hello';\n}", "language": "javascript", "showLineNumbers": true } },
        { "i": "explanation", "x": 8, "y": 0, "w": 4, "h": 8, "type": "rich-text", "data": { "content": "Code explanation here.", "type": "paragraph", "size": "sm" } }
      ]
    },
    "documentation-slide": {
      "description": "Comprehensive documentation slide with multiple text types",
      "grid": { "cols": 12, "rowHeight": 30, "margin": [12, 12] },
      "autoHeader": false,
      "header": { "i": "header", "x": 0, "y": 0, "w": 12, "h": 4, "type": "header", "data": { "title": "Documentation", "subtitle": "Complete Guide" } },
      "items": [
        { "i": "lead", "x": 0, "y": 0, "w": 12, "h": 2, "type": "rich-text", "data": { "content": "Lead paragraph introducing the topic.", "type": "lead", "size": "base" } },
        { "i": "features", "x": 0, "y": 2, "w": 6, "h": 5, "type": "list", "data": { "items": ["Feature 1", "Feature 2", "Feature 3"], "type": "bullet" } },
        { "i": "code", "x": 6, "y": 2, "w": 6, "h": 5, "type": "code", "data": { "code": "const example = 'code';", "language": "javascript" } },
        { "i": "note", "x": 0, "y": 7, "w": 12, "h": 2, "type": "note", "data": { "content": "Important note about implementation.", "type": "tip" } }
      ]
    }
  }
}
